{% extends 'base2.html.twig' %}

{% block title %}Habille toi en gtb{% endblock %}

{% block body %}
    <div class="container-fluid">
        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="interests">
            <div class="my-auto">
                {% for type in types %}
                    <h2 class="mb-5">{{ type.name }}</h2>
                    <div class="d-flex justify-content-between mt-5">
                        <div class="row">
                            {% for close in type.closes %}
                                <div class="col-sm-5">
                                    <div class="card" style="width: 18rem;">
                                        {% if close.filename is empty %}
                                            <img class="card-img-top" src="{{ asset('build/images/gtb.png') }}" alt="Non">
                                        {% else %}
                                            <img class="card-img-top" src="{{ vich_uploader_asset(close, 'imageFile') }}"
                                                 alt="Oui">
                                        {% endif %}
                                    </div>
                                    <div class="card-body">
                                    <P>{{ close.name }}</P>
                                    <p>{{ close.description }}</p>
                                    <p>{{ close.price }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    </div>
{% endblock %}

