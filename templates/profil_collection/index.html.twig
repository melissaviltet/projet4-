{% extends 'base.html.twig' %}

{% block title %}Habille toi en gtb{% endblock %}

{% block body %}
    <div class="container-fluid">
        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="interests">

            <div class="my-auto">
                {% for type in types %}
                    <h2 class="mb-5">{{ type.name }}</h2>
                    <div class="d-flex justify-content-between mt-5">
                        <div class="row">
                            {% for close in type.closes %}
                                <div class="col">
                                    <P>{{ close.name }}</P>
                                    <p>{{ close.description }}</p>
                                    <p>{{ close.price }}</p>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    </div>
{% endblock %}

